<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chỉnh sửa người dùng</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <form action="/put-crud" method="POST">
                <div class="form-row">
                    <div class="col-12 mt-3"><b>CHỈNH SỬA THÔNG TIN NGƯỜI DÙNG</b></div>
                </div>
                <div class="form-row">
                    <div class="form-group col-6">
                        <label for="inputfirstname4">Tên</label>
                        <input type="text" class="form-control" placeholder="Tên" name="firstName"
                            value="<%=userData.firstName%>">
                    </div>
                    <div class="form-group col-6">
                        <label for="inputLastname">Họ</label>
                        <input type="text" class="form-control" name="lastName" placeholder="Họ"
                            value="<%=userData.lastName%>">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-6">
                        <label for="inputphonenumber">Số điện thoại</label>
                        <input type="text" class="form-control" name="phonenumber" placeholder="Số điện thoại"
                            value="<%=userData.phonenumber%>">
                    </div>
                    <div class="form-group col-6">
                        <label for="inputaddress">Địa chỉ</label>
                        <input type="text" class="form-control" name="address" placeholder="1234 Main St"
                            value="<%=userData.address%>">
                    </div>
                </div>
                <input name="id" value="<%= userData.id %>" type="text" hidden/>
                <div class="form-row">
                    <button type="submit" class="btn btn-primary">Lưu Thay Đổi</button>
                </div>
            </form>
        </div>
    </div>

</body>

</html>